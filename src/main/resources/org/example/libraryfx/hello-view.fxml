<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #F4E4BC;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.libraryfx.HelloController">
   <top>
      <VBox alignment="CENTER" minHeight="150.0" spacing="10.0" style="-fx-background-color: #654321;" BorderPane.alignment="CENTER" VBox.vgrow="NEVER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Бібліотека" style="-fx-text-fill: #F4E4BC;">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label text="Ваш надійний помічник у світі книг" style="-fx-text-fill: #F4E4BC;">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Ласкаво просимо до нашої бібліотеки!" style="-fx-text-fill: #654321;">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="• Великий вибір книг" style="-fx-text-fill: #654321;" />
                  <Label text="• Зручний пошук" style="-fx-text-fill: #654321;" />
                  <Label text="• Онлайн бронювання" style="-fx-text-fill: #654321;" />
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" minHeight="150.0" spacing="20.0" style="-fx-background-color: #654321;" BorderPane.alignment="CENTER" VBox.vgrow="NEVER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #F4E4BC; -fx-text-fill: #654321; -fx-border-radius: 5px;" text="Вхід">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="registrationButton" mnemonicParsing="false" onAction="#onRegistrationButtonClick" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #F4E4BC; -fx-text-fill: #654321; -fx-border-radius: 5px;" text="Реєстрація">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </bottom>
</BorderPane>

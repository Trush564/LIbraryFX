<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #F4E4BC;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.libraryfx.LoginController">
   <children>
      <VBox alignment="CENTER" spacing="30.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <Label text="Вхід" style="-fx-text-fill: #654321;">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <VBox spacing="10.0" alignment="CENTER">
               <children>
                  <Label text="Логін:" style="-fx-text-fill: #654321;">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="loginField" prefHeight="40.0" prefWidth="300.0" promptText="Введіть логін" style="-fx-background-color: #FFFFFF; -fx-text-fill: #654321;" />
               </children>
            </VBox>
            <VBox spacing="10.0" alignment="CENTER">
               <children>
                  <Label text="Пароль:" style="-fx-text-fill: #654321;">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="300.0" promptText="Введіть пароль" style="-fx-background-color: #FFFFFF; -fx-text-fill: #654321;" />
               </children>
            </VBox>
            <VBox spacing="15.0" alignment="CENTER">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #654321; -fx-text-fill: #F4E4BC; -fx-border-radius: 5px;" text="Вхід">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #F4E4BC; -fx-text-fill: #654321; -fx-border-color: #654321; -fx-border-width: 2px; -fx-border-radius: 5px;" text="Назад">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
